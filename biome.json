{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "!.next",
      "!components.json",
      "!components/theme-provider.tsx",
      "!components/ui/**/*",
      "!hooks/use-toast.ts",
      "!lib/utils.ts",
      "!next.config.mjs",
      "!postcss.config.mjs"
    ]
  }
}
